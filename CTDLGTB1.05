#include<iostream>
using namespace std;
const int Max = 100;
int demsoduong(int a, int n) {
	if (n == 0)
		return 0;
	if (a[n-1] > 0)
		return 1+ demsoduong(a,n-1);
	else
		return 	demsoduong(a,n-1);
}
